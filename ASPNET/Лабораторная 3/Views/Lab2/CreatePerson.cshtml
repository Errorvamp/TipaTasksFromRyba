@model List<LW1.Models.Entities.Person>
@{
    ViewBag.Title = "CreatePerson";
}

<h2>CreatePerson</h2>
@Html.LabelFor(model => model.LastName,
    "Фамилия",
    htmlAttributes: new {@class = "control-label col-md-2"})

@using (Html.BeginForm("CreatePerson","Lab2", FormMethod.Post)) 
{ 
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Person</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">...</div>
    <div class="form-group">...</div>
    <div class="form-group">...</div>
    <div class="form-group">...</div>
    <div class="form-group">...</div>
    <div class="form-group">...</div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
            @Html.EditorError(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.EditorError(model => model.LastName, "", new { @class = "text-danger" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.RadioButtonFor(model => model.Gender, "M", new { @style = "margin-top: 10px;" }) Myжcкoй
            @Html.RadioButtonFor(model => model.Gender, "x", new { @style = "margin-top: 10px; margin-left: 20px" }) Жeнский
            @Html.RadioButtonFor(model => model.Gender, "", new { @style = "margin-top: 10px; margin-left: 20px" }) He указан
            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Gender,
            ViewBag.Genders as SelectList,
            new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Gender,new {@class="text-danger"})
        </div>
    </div>
</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th class="text-center">Наименование</th>
            <th class="text-center">Возраст</th>
            <th class="text-center">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
        <td>@person.LastName @person.FirstName @person.Patronymi</td>
        <td>@person.Age</td>
        <td>@Html.ActionLink("подробнее", "PersonDetails", "Lab2", new { personId = person.Id }, null)</td>
    }
        </tbody>

</table>